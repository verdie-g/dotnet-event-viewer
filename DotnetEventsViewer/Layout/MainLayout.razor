@using DotnetEventsViewer.Components

@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        .NET Events Viewer
        <FluentSpacer />
        <TraceMetadata />
        <FluentAnchor Appearance="Appearance.Hypertext"
                      Href="https://github.com/verdie-g/dotnet-events-viewer"
                      Target="_blank"
                      title=".NET Events Viewer on GitHub"
                      Style="margin-left: 8px">
            <FluentIcon Value="@(new CustomIcons.GitHub())" Color="Color.Fill" Width="24px" />
        </FluentAnchor>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent>
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>

<FluentTooltipProvider />
<FluentDialogProvider />
